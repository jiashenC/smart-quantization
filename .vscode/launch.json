    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: train.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "--accelerator",
                "ddp",
                "--gpus",
                "1",
                "--model",
                "bert",
                "--dataset",
                "glue",
                "--batch_size",
                "10",
                "--val_batch_size",
                "4",
