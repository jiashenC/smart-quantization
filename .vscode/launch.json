    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: train.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "--accelerator",
                "ddp",
                "--gpus",
                "-1",
                "--model",
                "resnet",
                "--dataset",
                "cifar10",
                "--batch_size",
                "256",
                "--val_batch_size",
                "256",
                "--max_epochs",
                "384",
                "--scheduler_type",
                "multi_step",
                "--compress",
                "s2fp8",
                "--name",
                "s2fp8-[forward,backward,loss,weight,grad,momentum]",
                "--logdir",
                "./lightning_logs_test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
