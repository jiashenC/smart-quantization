    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: train.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": ["--accelerator",
                "dp",
                "--gpus",
                "1",
                "--model",
                "bert",
                "--dataset",
                "glue",
                "--batch_size",
                "10",
                "--val_batch_size",
                "2",
                "--max_epochs",
                "16",
                "--compress",
                "smart",
                "--num_bits_main",
                "3",
                "--num_bits_outlier",
                "5",
                "--name",
                "smart-stochastic-[forward,backward,loss,weight,grad,momentum]-[3-5]"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
