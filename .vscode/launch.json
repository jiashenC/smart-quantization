    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: train.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": ["--accelerator",
                "ddp",
                "--gpus",
                "-1",
                "--model",
                "bert",
                "--dataset",
                "glue",
                "--batch_size",
                "2",
                "--max_epochs",
                "16",
                "--compress",
                "smart",
                "--num_bits_main",
                "6",
                "--num_bits_outlier",
                "8",
                "--name",
                "smart-stochastic-[forward,backward,loss,weight,grad,momentum]-[6-8]"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
